<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Enchant</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <link rel="shortcut icon" href="https://i.ibb.co/7NybZ3W7/1.png" type="image/x-icon">
  <link rel="stylesheet" href="/styles/enchant/entrar1.css">
  <script src="/scripts/enchant/entrar1.js"></script>
  <script src="/scripts/layouts/enchant/headerenchant.js"></script>
  <script src="/scripts/layouts/enchant/footerenchant.js"></script>
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body>

  <div id="header-container"></div>


  <main>
    <div class="faixa">
      <img src="/assets/imgs/enchant/login-enchant.png" id="imgcima" alt="Imagem decorativa acima do rodapé">
    </div>

    <section class="containerloginprincipal">

      <div class="containernome">
        <h1 class="h1">Entrar</h1>

        <form action="/login" method="POST" id="form">
          <div class="form">
            <p>Email:</p>
            <input type="email" id="email" name="email" placeholder="usuario@exemplo.com"><br>
          </div>

          <div class="form">
            <p>Senha:
            <p>
              <input type="password" id="senha" name="senha" placeholder="********"><br><br>
            <div class="containeresqueceu">
              <a class="esqueceu" href="/esqueci">Esqueceu a senha?</a>
            </div>
          </div>

          <div class="containerbtn">
            <button type="submit">Enviar</button>
          </div>

        </form>
      </div>

    </section>
  </main>

  <div class="faixa-imagem">
    <img src="/assets/imgs/enchant/login-2-enchant.png" alt="Imagem decorativa acima do rodapé">

  </div>
  <div id="enchant-footer"></div>
  <script src="/scripts/layouts/enchant/footerenchant.js"></script>


  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Carregar Bootstrap e FontAwesome automaticamente
      HeaderComponent.loadDependencies();

      // Renderizar o header no container
      initializeHeader('header-container');
    });
  </script>

</body>

</html>