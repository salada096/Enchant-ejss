                        </div>
                    `;
                    grade.appendChild(card);
                }
            }

            function renderizarPaginacao() {
                paginacaoContainer.innerHTML = '';
                const totalPaginas = Math.ceil(estado.ongsExibidas.length / estado.itensPorPagina);

                if (totalPaginas <= 1) return;

                const btnAnterior = document.createElement('button');
                btnAnterior.innerHTML = `<i class="fa-solid fa-chevron-left"></i>`;
                btnAnterior.className = 'btn-pagina';
                btnAnterior.disabled = estado.paginaAtual === 1;
                btnAnterior.addEventListener('click', () => {
                    if (estado.paginaAtual > 1) {
                        estado.paginaAtual--;
                        atualizarTudo();
                    }
                });
                paginacaoContainer.appendChild(btnAnterior);

                for (let i = 1; i <= totalPaginas; i++) {
                    const btnPagina = document.createElement('button');
                    btnPagina.innerText = i;
                    btnPagina.className = 'btn-pagina';
                    if (i === estado.paginaAtual) {
                        btnPagina.classList.add('active');
                    }
                    btnPagina.addEventListener('click', () => {
                        estado.paginaAtual = i;
                        atualizarTudo();
                    });
                    paginacaoContainer.appendChild(btnPagina);
                }

                const btnProximo = document.createElement('button');
                btnProximo.innerHTML = `<i class="fa-solid fa-chevron-right"></i>`;
                btnProximo.className = 'btn-pagina';
                btnProximo.disabled = estado.paginaAtual === totalPaginas;
                btnProximo.addEventListener('click', () => {
                    if (estado.paginaAtual < totalPaginas) {
                        estado.paginaAtual++;
                        atualizarTudo();
                    }
                });
                paginacaoContainer.appendChild(btnProximo);
            }
            
            inputBusca.addEventListener('keyup', () => {
                const termo = inputBusca.value.toLowerCase();
                estado.termoBusca = termo;

                estado.ongsExibidas = ongsDatabase.filter(ong => 
                    ong.nome.toLowerCase().includes(termo) || 
                    ong.descricao.toLowerCase().includes(termo)
                );
                
                estado.paginaAtual = 1;
                atualizarTudo();
            });

            function atualizarTudo() {
                renderizarGrade();
                renderizarPaginacao();
            }
            
            atualizarTudo();
        });
